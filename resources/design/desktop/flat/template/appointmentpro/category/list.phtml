<script type="text/javascript">
var uriParams = {};
let rowTemplate = `
    <tr class="dynarow" id="element_(ID)">
        <td><i class="fa fa-arrows" aria-hidden="true"></i></td>
        <td>#(ID)</td>
        <td><img width="40px" src="(IMAGE)"></td>
