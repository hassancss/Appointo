<script type="text/javascript">
	$(document).ready(function() {
		var appointmentId = <?php echo $booking['appointment_id']; ?>;
		var availableProviders = [];
		var hasBreakTime = false;
		var currentProvider2Id = null;

		// Load available providers when modal opens
		$('#change-provider-btn').click(function() {
			// Show loading alert
			swal({
				title: '<?php echo p__("appointmentpro", "Loading..."); ?>',
				text: '<?php echo p__("appointmentpro", "Please wait while we load available providers"); ?>',
				showConfirmButton: false,
				allowOutsideClick: false,
				closeOnClickOutside: false
			});

			loadAvailableProviders();
		});

		// Handle provider selection change for single provider
		$('#provider-select').change(function() {
			var selectedProviderId = $(this).val();
			if (selectedProviderId) {
				validateProviderAvailability(selectedProviderId);
			} else {
				hideAvailabilityStatus();
				$('#confirm-provider-change').prop('disabled', true);
			}
		});

		// Handle provider 1 (before break) selection change
		$('#provider-before-break').change(function() {
			validateDualProviders();
		});

		// Handle provider 2 (after break) selection change
		$('#provider-after-break').change(function() {
			validateDualProviders();
		});

		// Handle provider change confirmation
		$('#confirm-provider-change').click(function() {
			if (hasBreakTime) {
				var provider1Id = $('#provider-before-break').val();
				var provider2Id = $('#provider-after-break').val();
				if (provider1Id && provider2Id) {
					changeDualProviders(provider1Id, provider2Id);
				}
			} else {
				var selectedProviderId = $('#provider-select').val();
				if (selectedProviderId) {
					changeProvider(selectedProviderId);
				}
			}
		});

		function loadAvailableProviders() {
			$.ajax({
				type: 'GET',
				url: '/appointmentpro/booking/get-available-providers',
				data: {
					appointment_id: appointmentId
				},
				dataType: 'json',
				success: function(response) {
					if (response.success) {
						availableProviders = response.providers;
						hasBreakTime = response.has_break_time || false;
						currentProvider2Id = response.current_provider_2_id || null;

						if (hasBreakTime) {
							// Show dual provider section
							$('#single-provider-section').hide();
							$('#dual-provider-section').show();
							populateDualProviderSelects(response.providers, response.current_provider_id, currentProvider2Id);
						} else {
							// Show single provider section
							$('#single-provider-section').show();
							$('#dual-provider-section').hide();
							populateProviderSelect(response.providers, response.current_provider_id);
						}

						// Close the loading alert and open modal
						swal.close();
						$('#changeProviderModal').modal('show');
					} else {
						// Close loader and show error
						swal({
							title: '<?php echo p__("appointmentpro", "Error"); ?>',
							text: 'Failed to load providers: ' + response.message,
							type: 'error',
							confirmButtonText: '<?php echo p__("appointmentpro", "OK"); ?>'
						});
					}
				},
				error: function() {
					// Close loader and show error
					swal({
						title: '<?php echo p__("appointmentpro", "Error"); ?>',
						text: '<?php echo p__("appointmentpro", "Failed to load providers. Please try again."); ?>',
						type: 'error',
						confirmButtonText: '<?php echo p__("appointmentpro", "OK"); ?>'
					});
				}
			});
		}

		function populateProviderSelect(providers, currentProviderId) {
			var select = $('#provider-select');
			select.empty();

			// Debug: Check what value is being passed
			console.log('Single Provider - Current Provider ID:', currentProviderId, 'Type:', typeof currentProviderId);

			// Add empty option only if no provider is currently selected
			if (!currentProviderId || currentProviderId == '' || currentProviderId == null) {
				select.append('<option value=""><?php echo p__("appointmentpro", "Select Provider"); ?></option>');
			}

			$.each(providers, function(index, provider) {
				console.log('Checking provider:', provider.provider_id, 'Name:', provider.name, 'Type:', typeof provider.provider_id, 'against currentProviderId:', currentProviderId);

				// Add all providers to the dropdown
				var option = $('<option></option>')
					.val(provider.provider_id)
					.text(provider.name);

				// Mark the current provider as selected
				if (currentProviderId && String(provider.provider_id) == String(currentProviderId)) {
					console.log('Matched! Setting as selected:', provider.name);
					option.prop('selected', true);
				}

				select.append(option);
			});
		}

		function populateDualProviderSelects(providers, currentProviderId, currentProvider2Id) {
			var select1 = $('#provider-before-break');
			var select2 = $('#provider-after-break');

			// Debug: Check what values are being passed
			console.log('Current Provider ID:', currentProviderId, 'Type:', typeof currentProviderId);
			console.log('Current Provider 2 ID:', currentProvider2Id, 'Type:', typeof currentProvider2Id);

			select1.empty();
			select2.empty();

			// Add empty option only if no provider is currently selected
			if (!currentProviderId || currentProviderId == '' || currentProviderId == null) {
				select1.append('<option value=""><?php echo p__("appointmentpro", "Select Provider 1"); ?></option>');
			}
			if (!currentProvider2Id || currentProvider2Id == '' || currentProvider2Id == null) {
				select2.append('<option value=""><?php echo p__("appointmentpro", "Select Provider 2"); ?></option>');
			}

			$.each(providers, function(index, provider) {
				console.log('Checking provider:', provider.provider_id, 'Type:', typeof provider.provider_id, 'against currentProviderId:', currentProviderId);

				// Provider 1 dropdown - select current provider (provider 1)
				var option1 = $('<option></option>')
					.val(provider.provider_id)
					.text(provider.name);
				// Select in dropdown 1 if it matches the FIRST provider (using == for loose comparison)
				if (currentProviderId && String(provider.provider_id) == String(currentProviderId)) {
					console.log('Matched! Setting provider 1 as selected:', provider.name);
					option1.prop('selected', true);
				}
				select1.append(option1);

				// Provider 2 dropdown - select second provider if set
				var option2 = $('<option></option>')
					.val(provider.provider_id)
					.text(provider.name);
				// Select in dropdown 2 if it matches the SECOND provider (using == for loose comparison)
				if (currentProvider2Id && String(provider.provider_id) == String(currentProvider2Id)) {
					console.log('Matched! Setting provider 2 as selected:', provider.name);
					option2.prop('selected', true);
				}
				select2.append(option2);
			});
		}

		function validateDualProviders() {
			var provider1Id = $('#provider-before-break').val();
			var provider2Id = $('#provider-after-break').val();

			$('#confirm-provider-change').prop('disabled', true);
			hideAvailabilityStatus();
			$('#provider-2-availability').hide();

			if (!provider1Id || !provider2Id) {
				return;
			}

			// Validate both providers' availability
