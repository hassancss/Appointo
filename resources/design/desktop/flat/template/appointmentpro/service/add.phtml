<script type="text/javascript">
    if ($.datepicker.regional['<?php echo Core_Model_Language::getCurrentLanguageDatepicker(); ?>']) {
        $.datepicker.setDefaults($.datepicker.regional['<?php echo Core_Model_Language::getCurrentLanguageDatepicker(); ?>']);
    } else {
        $.datepicker.setDefaults($.datepicker.regional['en']);
    }

    $("#special_start").datepicker({
        changeMonth: true,
        setDate: new Date(),
        changeYear: true,
        numberOfMonths: 1,
        dateFormat: 'yy-mm-dd',
        onClose: function(selectedDate) {
            $('#special_end').datepicker("option", {
                "minDate": selectedDate
            });
        }
    });

    /*End date change*/
    $("#special_end").datepicker({
        changeMonth: true,
        changeYear: true,
        numberOfMonths: 1,
        dateFormat: 'yy-mm-dd',
        onClose: function(selectedDate) {
            $('#special_start').datepicker("option", {
                "maxDate": selectedDate
            });
        }
    });
    /*End date Min*/


    setTimeout(function() {
        $('#description').ckeditor(ckeditor_config.cms);
    }, 100);

    // Handle break time configuration visibility
    $('#has_break_time').change(function() {
        if ($(this).is(':checked')) {
            $('#break_time_config').slideDown();
            $('#work_time_before_break, #break_duration, #work_time_after_break').addClass('required');
            updateServiceTimeFromBreakConfig();
        } else {
            $('#break_time_config').slideUp();
            $('#work_time_before_break, #break_duration, #work_time_after_break').removeClass('required');
            $('#service_time').prop('disabled', false);
            $('#break_time_config .alert-info').html('');
        }
    });

    // Auto-validate break configuration when values change
    $('#work_time_before_break, #break_duration, #work_time_after_break').on('change keyup', function() {
        if ($('#has_break_time').is(':checked')) {
            updateServiceTimeFromBreakConfig();
        }
    });

    // Validate when service time changes
    $('#service_time').change(function() {
        if ($('#has_break_time').is(':checked')) {
            updateServiceTimeFromBreakConfig();
        }
    });

    function updateServiceTimeFromBreakConfig() {
        var workBefore = parseInt($('#work_time_before_break').val()) || 0;
        var breakDuration = parseInt($('#break_duration').val()) || 0;
        var workAfter = parseInt($('#work_time_after_break').val()) || 0;
        var totalTime = workBefore + breakDuration + workAfter;
        var selectedServiceTime = parseInt($('#service_time').val()) || 0;

        if (totalTime > 0) {
            // Check if break configuration matches selected service time
            if (selectedServiceTime > 0 && totalTime !== selectedServiceTime) {
                $('#break_time_config .alert-info').html(
                    '<strong style="color: #d9534f;"><?php echo p__("appointmentpro", "Invalid Configuration:"); ?></strong> ' +
                    workBefore + ' min work + ' + breakDuration + ' min break + ' + workAfter + ' min work = ' + totalTime + ' min total<br/>' +
                    '<span style="color: #d9534f;">This must equal the service time (' + selectedServiceTime + ' min). Please adjust your break configuration.</span>'
                );
                return false;
            }

            // Update break configuration info
            $('#break_time_config .alert-info').html(
                '<strong style="color: #5cb85c;"><?php echo p__("appointmentpro", "Valid Configuration:"); ?></strong> ' +
                workBefore + ' min work → ' + breakDuration + ' min break → ' + workAfter + ' min work = ' + totalTime + ' min total'
            );
            return true;
        }
        return false;
    }

    $('#serviceform').submit(function(e) {
        e.preventDefault();

        // Validate break configuration if enabled
        if ($('#has_break_time').is(':checked')) {
            var isValid = updateServiceTimeFromBreakConfig();
            if (!isValid) {
                alert('<?php echo p__("appointmentpro", "Please fix the break time configuration before saving."); ?>');
                return false;
            }
        }

        var formData = new FormData(this);
        if ($(this).valid()) {
            reload(this, this.action, formData, function(data) {
                if (data.success) {
                    window.location = "<?php echo $this->getUrl("appointmentpro/service/list"); ?>";
                }
            });
        }
        return false;
    });


    var Uploader = new Uploader();
    /*IOS screenshots */
    var image_view_template = '<?php echo str_replace("\n", "", '<div class="cms-image" style="background-image: url(#THUMBNAIL_PATH#);"><div class="image-delete"></div><img src="" class="cms-image-unit uploadImage" /><input type="hidden" name="featured_image[]" value="%IMAGE_PATH%" /></div>'); ?>';

    $('#select_image').fileupload({
        dataType: 'json',
        add: function(e, data) {
            data.submit();
            Uploader.showProgressbar();
        },
        progressall: function(e, data) {
            Uploader.moveProgressbar(data);
        },
        fail: function(el, data) {
            Uploader.hide();
            Uploader.showError(JSON.parse(data.jqXHR.responseText).message);
        },
        done: function(e, data) {
            if (data.result.error) {
                Uploader.hide();
                Uploader.showError(data.result.message);
            }
            if (data.result.success) {
                Uploader.hide();
                var params = [];
                params["url"] = '<?php echo $this->getUrl('template/crop/crop'); ?>';
                params["file"] = data.result.files;
                params["output_w"] = 120;
                params["output_h"] = 120;
                params["output_url"] = '<?php echo str_replace('/', '$', $this->getUrl('appointmentpro/application/crop')) ?>';
                params["uploader"] = 'Uploader';
                Uploader.crop(params);

                Uploader.callback = function(file) {
                    var cms_image = image_view_template;
                    cms_image = cms_image.replace("%IMAGE_PATH%", file);
                    cms_image = cms_image.replace("#THUMBNAIL_PATH#", '<?php echo Core_Model_Directory::getTmpDirectory(); ?>/' + file);
                    $(".category-images-container").html(cms_image);
                };
            }
        }
    });

    $(document).on("click", ".image-delete", function() {
        var el = $(this);
        el.parents(".cms-image").remove();
    });

    $(document).on("click", ".uploadImage", function() {
        $("#select_image").click();
    });
</script>